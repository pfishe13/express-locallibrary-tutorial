extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='book') Book:
      select#book.form-control(type='select' placeholder='Select book' name='book' required='true')
        - book_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
        for book in book_list
          option(value=book._id, selected=(selected_book==book._id.toString() ? 'selected' : false) ) #{book.title}

    div.form-group
      label(for='imprint') Imprint:
      input#imprint.form-control(type='text' placeholder='Publisher and date information' name='imprint' required='true' value=(undefined===bookinstance ? '' : bookinstance.imprint))
    div.form-group
      label(for='due_back') Date when book available:
      input#due_back.form-control(type='date' name='due_back' value=(undefined===bookinstance ? '' : bookinstance.due_back_formatted_html))

    div.form-group
      label(for='status') Status:
      select#status.form-control(type='select' placeholder='Select status' name='status' required='true')
        if bookinstance != undefined && bookinstance.status == "Maintenance"
            option(value='Maintenance' selected) Maintenance
        else 
            option(value='Maintenance') Maintenance
        if bookinstance != undefined && bookinstance.status == "Available"
            option(value='Available' selected) Available
        else 
            option(value='Available') Available
        if bookinstance != undefined && bookinstance.status == "Loaned"
            option(value='Loaned' selected) Loaned
        else 
            option(value='Loaned') Loaned
        if bookinstance != undefined && bookinstance.status == "Reserved"
            option(value='Reserved' selected) Reserved
        else 
            option(value='Reserved') Reserved

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
